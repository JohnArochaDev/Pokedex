                                <!-- PARTLY CLOUDY -->
                                <% } else if (condition == 'Partly cloudy') { %>
                                    <img src="../../public/images/icons/partlyCloudyDay.png" alt="" class="weatherIcon">
                                <!-- WINDY -->
                            <% } else {%>
                                <img src="../../public/images/icons/wind.png" alt="" class="weatherIcon">
                        <% } %>

