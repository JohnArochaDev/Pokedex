                <div class="card-img-overlay">
                    <div class="card-text">
                        <!-- CLEAR -->
                        <% if (condition == 'Clear' ||condition == 'Sunny') { %>
                                <img src="../../public/images/icons/clearDay.png" alt="" class="weatherIcon">
                                <!-- CLOUDY -->
                            <% } else if (condition == 'Cloudy' || condition == 'Overcast') {%>
                                <img src="../../public/images/icons/cloudy.png" alt="" class="weatherIcon">
                                <!-- RAIN -->
                            <% } else if (condition == 'Mist' || condition == 'Light drizzle' || condition == 'Moderate or heavy rain shower'|| condition == 'Patchy light drizzle' || condition == 'Light rain' || condition == 'Patchy rain possible' || condition == 'Patchy light rain' || condition == 'Moderate rain' || condition == 'Heavy rain' || condition == 'Light rain shower' || condition == 'Moderate rain at times' || condition == 'Heavy rain at times') {%>
                                <img src="../../public/images/icons/rain.png" alt="" class="weatherIcon">
                                <!-- THUNDERSTORM -->
                            <% } else if (condition == 'Patchy light rain with thunder' || condition == 'Moderate or heavy rain with thunder' || condition == 'Torrential rain shower' || condition == 'Thundery outbreaks possible') {%>
                                <img src="../../public/images/icons/severeThunderstorm.png" alt="" class="weatherIcon">
                                <!-- SNOW -->
                            <% } else if (condition == 'Light snow' || condition == 'Light snow showers' || condition == 'Patchy snow possible' || condition == 'Patchy sleet possible' || condition == 'Freezing drizzle' || condition == 'Moderate or heavy sleet' || condition == 'Patchy light snow' || condition == 'Patchy moderate snow' || condition == 'Light sleet showers' || condition == 'Moderate snow' || condition == 'Light sleet' || condition == 'Heavy freezing drizzle' || condition == 'Patchy freezing drizzle possible' || condition == 'Moderate or heavy sleet showers' || condition == 'Light showers of ice pellets' || condition == 'Moderate or heavy showers of ice pellets' || condition == 'Patchy freezing drizzle possible' || condition == 'Moderate or heavy freezing rain' || condition == 'Ice pellets' || condition == 'Patchy heavy snow' || condition == 'Light freezing rain') {%>
                                <img src="../../public/images/icons/snow.png" alt="" class="weatherIcon">
                                <!-- BLIZZARD -->
                            <% } else if (condition == 'Blizzard' || condition == 'Blowing snow' || condition == 'Heavy snow' || condition == 'Patchy light snow with thunder' || condition == 'Moderate or heavy snow showers' || condition == 'Moderate or heavy snow with thunder') {%>
